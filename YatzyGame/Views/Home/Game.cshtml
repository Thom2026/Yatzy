
@{
    ViewBag.Title = "Game";
}

<html>
<head>
    <title>Yatzy - The Game</title>
    <script src="~/Scripts/YatzyScript.js"></script>
</head>
<body>
    @Styles.Render("~/Content/Site.css")
    <table class="game">
        <tr>
            <th></th>
            <th>Player 1</th>
            <th>Player 2</th>
            <th>Player 3</th>
            <th class="selectbutton"></th>
        </tr>
        <tr>
            <th>1'ere</th>
            <th id="ones" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select1" id="s1" type="button" value="Select" onclick="GetValueSame(1, ones), hideButton(s1)"></th>
        </tr>
        <tr>
            <th>2'ere</th>
            <th id="twos" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select2" id="s2" type="button" value="Select" onclick="GetValueSame(2, twos), hideButton(s2)"></th>
        </tr>
        <tr>
            <th>3'ere</th>
            <th id="threes" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select3" id="s3" type="button" value="Select" onclick="GetValueSame(3, threes), hideButton(s3)"></th>
        </tr>
        <tr>
            <th>4'ere</th>
            <th id="fours" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select4" id="s4" type="button" value="Select" onclick="GetValueSame(4, fours), hideButton(s4)"></th>
        </tr>
        <tr>
            <th>5'ere</th>
            <th id="fives" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select5" id="s5" type="button" value="Select" onclick="GetValueSame(5, fives), hideButton(s5)"></th>
        </tr>
        <tr>
            <th>6'ere</th>
            <th id="sixes" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select6" id="s6" type="button" value="Select" onclick="GetValueSame(6, sixes), hideButton(s6)"></th>
        </tr>
        <tr class="result">
            <th>SUM</th>
            <th id="firstSum" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"></th>
        </tr>
        <tr>
            <th>Bonus</th>
            <th id="bonus" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"></th>
        </tr>
        <tr>
            <th>1 par</th>
            <th id="par" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select7" id="s7" type="button" value="Select" onclick="GetValuePairs(1, par), hideButton(s7)"></th>
        </tr>
        <tr>
            <th>2 par</th>
            <th id="twopar" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select8" id="s8" type="button" value="Select" onclick="GetValuePairs(2, twopar), hideButton(s8)"></th>
        </tr>
        <tr>
            <th>3 ens</th>
            <th id="threelike" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select9" id="s9" type="button" value="Select" onclick="GetValueLikes(3, threelike), hideButton(s9)"></th>
        </tr>
        <tr>
            <th>4 ens</th>
            <th id="fourlike" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select10" id="s10" type="button" value="Select" onclick="GetValueLikes(4, fourlike), hideButton(s10)"></th>
        </tr>
        <tr>
            <th>Lille straight</th>
            <th id="small" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select11" id="s11" type="button" value="Select" onclick="GetValueStraight(1, small), hideButton(s11)"></th>
        </tr>
        <tr>
            <th>Stor Straight</th>
            <th id="big" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select12" id="s12" type="button" value="Select" onclick="GetValueStraight(2, big), hideButton(s12)"></th>
        </tr>
        <tr>
            <th>Hus</th>
            <th id="house" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select12" id="s13" type="button" value="Select" onclick="GetValueHouse(house), hideButton(s13)"></th>
        </tr>
        <tr>
            <th>Chance</th>
            <th id="C" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select14" id="s14" type="button" value="Select" onclick="GetValueChance(C), hideButton(s14)"></th>
        </tr>
        <tr>
            <th>YATZY</th>
            <th id="yatzy" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"><input class="scoreSelect" name="select15" id="s15" type="button" value="Select" onclick="YATZY(yatzy), hideButton(s15)"></th>
        </tr>
        <tr class="result">
            <th>SUM</th>
            <th id="FinalSum" class="Player"></th>
            <th></th>
            <th></th>
            <th class="selectbutton"></th>
        </tr>
    </table>
    <h1 class='headline'>Yatzy</h1>
    <fieldset>
        <input class="dice" name="dice1" id="d1" type="button" value="?" onclick="diceToReroll(d1)">
        <input class="dice" name="dice2" id="d2" type="button" value="?" onclick="diceToReroll(d2)">
        <input class="dice" name="dice3" id="d3" type="button" value="?" onclick="diceToReroll(d3)">
        <input class="dice" name="dice4" id="d4" type="button" value="?" onclick="diceToReroll(d4)">
        <input class="dice" name="dice5" id="d5" type="button" value="?" onclick="diceToReroll(d5)">
    </fieldset>
    <p><input class="newGameButton" name="StartButton" id="SB" type="button" value="New Game" onclick="StartGame()"></p>
    <p><input class="roll" name="RollButton" id="RB" type="button" value="Roll" onclick="DiceRoll()"></p>
    <script>
	function GetSum(){
		document.getElementById("firstSum").innerText =	Number(document.getElementById("ones").innerText) +
														Number(document.getElementById("twos").innerText) +
														Number(document.getElementById("threes").innerText) +
														Number(document.getElementById("fours").innerText) +
														Number(document.getElementById("fives").innerText) +
														Number(document.getElementById("sixes").innerText);
		if(document.getElementById("firstSum").innerText >= 63) {
			document.getElementById("bonus").innerText = "50";
		}
		document.getElementById("FinalSum").innerText =	Number(document.getElementById("firstSum").innerText) +
														Number(document.getElementById("bonus").innerText) +
														Number(document.getElementById("par").innerText) +
														Number(document.getElementById("twopar").innerText) +
														Number(document.getElementById("threelike").innerText) +
														Number(document.getElementById("fourlike").innerText) +
														Number(document.getElementById("small").innerText) +
														Number(document.getElementById("big").innerText) +
														Number(document.getElementById("house").innerText) +
														Number(document.getElementById("C").innerText) +
														Number(document.getElementById("yatzy").innerText);
	}
    </script>
</body>

</html>